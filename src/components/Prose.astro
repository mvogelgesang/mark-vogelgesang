  <script is:inline>
    document.querySelectorAll('pre > code').forEach((codeBlock) => {
      codeBlock.classList.add('not-prose');
    });
    // treat all table rows as a group, apply correct color to child elements of tr
    document.querySelectorAll('.prose tr').forEach((tr) => {
      tr.classList.add('group');
    });
    document.querySelectorAll('.prose tr *').forEach((tr) => {
      tr.classList.add('group-hover:text-background');
    })
