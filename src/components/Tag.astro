---
import MaterialIcon from "./MaterialIcon.astro";
const { class: className, tag, ...props } = Astro.props;
---

<div class="">
  <a
    class="not-prose text-secondary-color font-sans font-medium lowercase bg-background mr-2 md:p-2 w-full sm:w-fit no-underline rounded-sm hover:bg-secondary-color hover:text-background hover:font-semibold transition-colors duration-200 ease-in-out block first:pl-0 float-left mb-2 md:mb-0"
    href={`/tags/${tag}/`}
  >
    <MaterialIcon class="pr-1 align-middle" iconName="tag" />{tag}
  </a>
</div>
