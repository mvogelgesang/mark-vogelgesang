---
import PageWrapper from "./PageWrapper.astro";
const {
  content: { title, description, imgSrc, imgAlt },
} = Astro.props;
---

<PageWrapper title={title} description={description}>
  <div class="row m-top-3">
    <div class="col-12 col-8-md grid-gap-105">
      <div class="blog-post">
        <div class="blog-post-content">
          <slot />
        </div>
      </div>
    </div>
    <div class="col-12 col-4-md grid-gap-105">
      <div class="blog-post">
        <div class="blog-post-content">
          <img src={imgSrc} alt={imgAlt} style="" />
        </div>
      </div>
    </div>
  </div>
</PageWrapper>
